<%- include("partials/header.ejs") %>
<section id="register">
     <form action="/addClient" id="clientInfo" method="post">
          <div class="container">
            <h3>Personal Info:</h3>
            <div class="register-row">
              <div class="register-column name">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" name="name" id="name" required>
              </div>
              
              <div class="register-column">
                <label for="email" class="form-label">E-mail:</label>
                <div class="input-group">
                  <input type="email" class="form-control" name="email" id="validationDefaultEmail"  aria-describedby="inputGroupPrepend2" required>
                </div>
              </div>

              <div class="register-column">
                <label for="contact" class="form-label">Phone Number:</label>
                <div class="input-group">
                  <span class="input-group-text" id="inputGroupPrepend2">+91</span>
                  <input type="text" class="form-control" name="contact" id="contact"  aria-describedby="inputGroupPrepend2" required>
                </div>
              </div>
              <div class="register-column">
                <label for="note" class="form-label">Note:</label>
                <div class="input-group">
                  <textarea form="clientInfo" id="note" name="note" rows="3" cols="33" required ></textarea>
                </div>
              </div>
              <br>
              
              <h3>Address:</h3>
                <div class="register-column">
                  <label for="apartment" class="form-label">Apartment:</label>
                  <input type="text" class="form-control" name="apartment" id="apartment" required>
                </div>
  
                <div class="register-column">
                  <label for="address" class="form-label">Address:</label>
                  <input type="text" class="form-control" name="address" id="address" required>
                </div>
                <div class="register-column">
                  <label for="pinCode" class="form-label">Pin Code:</label>
                  <input type="text" class="form-control" name="pinCode" id="pinCode" required>
                </div>
  
              <br>
              
             <h3>Card Details:</h3>
                <div class="register-column">
                  <label for="cardId" class="form-label">Card ID:</label>
                  <input type="text" class="form-control" name="cardId" id="cardId" required>
                </div>
  
                <div class="register-column">
                  <label for="tokenId" class="form-label">Token ID:</label>
                  <input type="text" class="form-control" name="tokenId" id="tokenId" required>
                </div>
                <div class="register-column">
                  <label for="last4digits" class="form-label">Last four digits:</label>
                  <input type="text" class="form-control" name="last4digits" id="last4digits" required>
                </div>
          
              <div class="register-column">
                <button class="btn btn-primary" type="submit" style="width: 100%; margin-top:1rem">Add Client</button>
              </div>
              
            </div>
          </div>
      </form>
      </section>
      <%- include("partials/footer.ejs") %>